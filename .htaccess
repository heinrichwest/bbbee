# Enable RewriteEngine
RewriteEngine On

# Remove .html extension from URLs
# If the request is for a file that doesn't exist
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Check if adding .html makes it a valid file
RewriteCond %{REQUEST_FILENAME}.html -f

# Rewrite to add .html extension
RewriteRule ^(.+)$ $1.html [L,QSA]

# Redirect .html URLs to clean URLs (301 permanent redirect)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# Force HTTPS (optional, but recommended)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove trailing slash (optional)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} (.+)/$
RewriteRule ^ %1 [R=301,L]
